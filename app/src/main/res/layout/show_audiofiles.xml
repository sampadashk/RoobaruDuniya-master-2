<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >





    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/list_latest"></android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="जनहित पर भारी"
        android:textColor="@color/com_facebook_blue"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"
        />



    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:id="@+id/list_audiocat1"></android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/com_facebook_blue"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"

        android:text="बोलती तस्वीरें"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:id="@+id/list_photocat"></android.support.v7.widget.RecyclerView>


    <include layout="@layout/layout_bottom"></include>



</LinearLayout>
